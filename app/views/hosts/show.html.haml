- page_title
.page-header
  = link_to hosts_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_host_path(@host), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h2 Show Host

%dl.dl-horizontal
  %dt Name:
  %dd= @host.name
  %dt Code:
  %dd= @host.code
  %dt Airlines:
  %dd= @host.airlines.name
