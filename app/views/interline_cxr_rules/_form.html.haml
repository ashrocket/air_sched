= simple_form_for [@rule_key, @interline_cxr_rule],
                :html => {class: 'form-horizontal' } do |f|
  - if @interline_cxr_rule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@interline_cxr_rule.errors.count, "error")} prohibited this interline_cxr_rule from being saved:"
      %ul
        - @interline_cxr_rule.errors.full_messages.each do |msg|
          %li= msg
  .form-inputs
    = f.hidden_field  :report_key_id
    = f.input :markets, as: :array
    = f.input :combinations, as: :array
    = f.input :rule_kind, collection: ['allow', 'exclude']
    = f.label :active
    = f.check_box :active
    .form-group
      = f.submit 'Save', class: 'btn btn-primary'


